<h4><a href="/">Home</a></h4><br>

<h1>Add Location to Database</h1><hr>

<form action="/location/new" method="post">
  <label>Name:</label>
  <input type="text" id="name" name="name"><br>
  <label>Station:</label>
  <select id="station" type="text" name="station">
    <option value=""></option>
    #foreach ($station in $stations)
      <option value="$station.getId()">$station.getName()</option>
    #end
  </select><hr>
  <button type="submit">Add Location</button>
</form>
